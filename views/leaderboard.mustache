<!DOCTYPE html>
<html lang="en">

<head>
	<title>Leaderboard</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

	<link rel="stylesheet" type="text/css" href="leaderboard.css">

</head>

<body>

	<div class="navbar-fixed">
    <nav class="nav-extended">
      <div class="nav-wrapper">
        <div>
				<ul class="score-ul">
					<li class="current-score"><h5>Your Score: {{#userScore}}{{current_score}}{{/userScore}}</h5></li>
					<li class="best-score"><h5>Your Best Score: {{#userScore}}{{high_score}}{{/userScore}}</h5></li>
				</ul>
				</div>
        <ul class="right hide-on-small-and-down">
          <li><a href="/play">Play</a></li>
        </ul>
      </div>
    </nav>
  </div>

	<div class="limiter">
		<div class="container-table100">
			<div class="wrap-table100">
				<div class="table100">
					<table>
						<thead>
							<tr class="table100-head">
								<th class="column1">Rank</th>
								<th class="column2">User</th>
								<th class="column3">Score</th>
								<th class="column4">Level</th>
								<th class="column5">Date</th>
							</tr>
						</thead>
						<tbody>
						{{#scores}}
							<tr>
								<td class="column1">{{rankId}}</td>
								<td class="column2">{{username}}</td>
								<td class="column3">{{high_score}}</td>
								<td class="column4">{{high_level}}</td>
								<td class="column5">{{high_score_date}}</td>
							</tr>
							{{/scores}}
						</tbody>
					</table>
				</div>
			</div>
			<div class="wrap-chat">

				<input id="displayUsername" type="hidden" value="{{username}}" /> 
                <div id="numConnects"></div>
				<ul id="messageBox"></ul>
				<form id="messageInput" action="">
          			<input id="message" value=""/>
          			<button id="submitButton">Send</button>
				</form>
			</div>
		</div>
	</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/chat.js"></script>

</body>

</html>