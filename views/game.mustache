<html>

<head>
  <link rel="stylesheet" href="tetris.css" >
  <meta name = "viewport" content = "width=device-width, minimum-scale=1.0, maximum-scale = 1.0, user-scalable = no">
</head>

<body>
    <h4>score</h4>
    <form id="scoreForm" style="display:none" method="POST" action="play/submitScore">
      <input id="score" type="hidden" name="recordScore" />
      <input id="level" type="hidden" name="recordLevel" />
      <button id="submitScore" type="submit" value="send"></button>
    </form>
    <div id="showScore">0</div>
    <!-- 240px x 400px is the drawing buffer -->
    <canvas id="tetris" width="240" height="400"></canvas>
    <div id="menu">
      <p>lines</p>
      <div id="lines">0</div>
      <p>level</p>
      <div id="showLevel">0</div>
      <p>next</p>
      <canvas id="nextPiece" width="100" height="100"></canvas>
    </div>
    <div class="controls">
      <button id="rot_counterclock_button">ROT CC</button>
      <button id="fast_drop_button">DROP</button></canvas>
      <button id="rot_clockwise_button">ROT C</button>
    </div>
    <input type="hidden" id="devmode" value={{devmode}} />
    <script src="/socket.io/socket.io.js"></script>
    <script src="tetris.js"></script>  
</body>

</html>
